<?xml version="1.0" encoding="utf-8"?>



<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".com.android.ensak.tourismeapp.rechercheActivity.ArtisanatActivity"
android:orientation="vertical">
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageArtisanat"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="325dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />


        <TextView
            android:id="@+id/activity_artisanat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageArtisanat"
            android:layout_marginStart="0dp"
            android:layout_marginTop="27dp"
            android:text="Nom de l'artisanat"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/DescriptionArtisanat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_artisanat_name"
            android:padding="9dp"
            android:text="Description de l'artisanat" />

    </RelativeLayout>

</LinearLayout>


</android.support.v4.widget.NestedScrollView>

